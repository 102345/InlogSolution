@model IEnumerable<Inlog.Frota.Presentation.ViewModels.VeiculoViewModel>


<div class="col-xs-12">
    <div class="col-xs-12">
        <div class="col-xs-4">
            &nbsp;
        </div>
    </div>
    <div class="col-xs-12">
        <div class="col-xs-4">
            &nbsp;
        </div>
    </div>

    <div class="col-xs-12">
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            &nbsp;
        </div>
        <div class="col-xs-2">
            <button type="button" id="btnIncluirVeiculo" class="btn btn-primary incluirVeiculo">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                <span class="glyphicon-class">Incluir</span>
            </button>
        </div>
        <div class="col-xs-2">
            <button type="button" id="btnPesquisarVeiculo" class="btn btn-primary pesquisarVeiculo">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                <span class="glyphicon-class">Pesquisar</span>
            </button>
        </div>
    </div>
    <div>

        <table id="tblVeiculos" class="table table-striped table-hover">


            <thead>
                <tr>

                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Chassi)</th>
                    <th>@Html.DisplayNameFor(model => model.Cor)</th>
                    <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                    <th>@Html.DisplayNameFor(model => model.NroPassageiros)</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>

            <tbody>



                @foreach (var item in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Chassi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cor)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                        <td>@Html.DisplayFor(modelItem => item.NroPassageiros)
                        <td>
                            <button type="button" id="btnEditarVeiculo" class="btn btn-success editarVeiculo" data-id="@item.Id">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                <span class="glyphicon-class">Editar</span>
                            </button>
                        </td>
                        <td>
                            <button type="button" id="btnExcluirVeiculo" class="btn btn-danger excluirVeiculo" data-id="@item.Id">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                <span class="glyphicon-class">Excluir</span>
                            </button>
                        </td>

                    </tr>


                }


            </tbody>
        </table>


    </div>

</div>


<div role="dialog" tabindex="-1" id="modExcluirVeiculo" class="modal fade">

</div>


<div role="dialog" tabindex="-1" id="modIncluirVeiculo" class="modal fade">

</div>

<div role="dialog" tabindex="-1" id="modAtualizarVeiculo" class="modal fade">

</div>

<div role="dialog" tabindex="-1" id="modPesquisarVeiculo" class="modal fade">

</div>












