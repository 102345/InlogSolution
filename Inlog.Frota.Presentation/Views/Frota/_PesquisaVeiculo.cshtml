@model Inlog.Frota.Presentation.ViewModels.VeiculoViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h4 class="modal-title">Pesquisa Veículo</h4>
        </div>
        <div class="modal-body">


            @using (Html.BeginForm("PesquisarVeiculos", "Frota", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", id = "frmPesquisarVeiculo", @class = "form-horizontal" }))
            {

            <div class="col-xs-12">

                <div class="form-group">
                    Filtro
                </div>


                @Html.HiddenFor(model => model.Id, new { @id = "hdId" })
                @Html.HiddenFor(model => model.Cor, new { @id = "hdCor" })
                @Html.HiddenFor(model => model.NroPassageiros, new { @id = "hdNrPassageiros" })
                @Html.HiddenFor(model => model.Tipo, new { @id = "hdTipo" })

                <div class="form-group">
                    <label for="txtChassi" class="form-label">Chassi</label>
                    @Html.TextBoxFor(model => model.Chassi, new { placeholder = "Chassi", @class = "form-control", @id = "txtChassi" })
                </div>

            </div>  
                <div class="modal-footer">

                    <table>
                        <tr>

                            <td width="600px;">
                                &nbsp;
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary" name="OK" value="OK">OK</button>
                            </td>
                            <td>
                                &nbsp;
                            </td>
                            <td>
                                &nbsp;
                            </td>
                            <td>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            </td>
                        </tr>

                    </table>
                </div>



            }


        </div>

    </div>


</div>





